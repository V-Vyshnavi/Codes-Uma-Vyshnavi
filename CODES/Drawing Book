public static int pageCount(int n, int p) {
    // Write your code here
    if(n%2==0){
        if(n==p || p==1){
            return 0;
        }
        else if((n-p)==1 || (n-p)==2){
            return 1;
        }
        else if((n-p)<p){
            return (n-p)/2;
        }
        return p/2;
    }
    else{
        if((n-p)==0 || (n-p)==1){
            return 0;
        }
        else if((n-p)<p){
            return (n-p)/2;
        }
        return p/2;
    }

    }
